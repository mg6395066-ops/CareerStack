# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/database

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Application Configuration
APP_NAME=NRE Infusion OneHub Suite
COMPANY_NAME=NRE Infusion
APP_URL=http://localhost:5000

# Port Configuration
PORT=5000
VITE_PORT=5173

# Environment
NODE_ENV=development

# Encryption Configuration (REQUIRED FOR PRODUCTION)
# Generate a 32-character random string for production
# Example: openssl rand -base64 32
ENCRYPTION_KEY=your-32-character-encryption-key-change-in-production-please

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=Support Team <noreply@yourdomain.com>
SUPPORT_EMAIL=support@yourdomain.com

# Optional: Enable query logging
ENABLE_QUERY_LOGGING=false

# Optional: File Upload Limits
MAX_FILE_SIZE=25000000
MAX_FILES_PER_REQUEST=3
